<%= form_with(model: outcome, local: true) do |form| %>
  <% if outcome.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(outcome.errors.count, "error") %> prohibited this outcome from being saved:</h2>

      <ul>
      <% outcome.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :summa %>
    <%= form.text_field :summa, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :selgitus %>
    <%= form.text_field :selgitus, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :kuupaev %>
    <%= form.date_select :kuupaev, :use_month_names => ['Jaanuar', 'Veebruar', 'Märts', 'Aprill', 'Mai', 'Juuni', 'Juuli', 'August', 'September', 'Oktoober', 'November', 'Detsember'], class: 'form-control' %>
  </div>

  <div class="field form-group form-check">
    <%= form.check_box :makstud, class: 'form-check-input' %>
    <%= form.label :makstud %>
  </div>

  <div class="field form-group form-check">
    <%= form.check_box :igakuine, class: 'form-check-input' %>
    <%= form.label :igakuine %>
  </div>

  <div class="actions form-group">
    <%= form.submit 'Lisa väljaminek', :class => 'btn btn-success' %>
    <%= link_to 'Loobu', root_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
